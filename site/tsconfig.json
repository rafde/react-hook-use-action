{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "exclude": [
    "./node_modules",
    "next.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts(x)",
    "next.config.js",
    "tailwind.config.js",
    ".next/types/**/*.ts"
  ]
}
